# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WEATHER_API_KEY=your_openweather_api_key

# Application Configuration
REACT_APP_MAP_ZOOM_LEVEL=4
REACT_APP_DEFAULT_LOCATION_LAT=40.7128
REACT_APP_DEFAULT_LOCATION_LON=-74.0060

# Feature Flags
REACT_APP_ENABLE_VOICE_COMMANDS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Theme Configuration
REACT_APP_THEME_PRIMARY_COLOR=#1a1a35
REACT_APP_THEME_SECONDARY_COLOR=#4a90e2 